{
  "global": {
    "model_dir": "./models",
    "auto_retrain_days": 7,
    "retain_last_n": 3,
    "save_images": true,
    "images_dir": "./images"
  },
  "default_data_window": {
    "window_length": "30d",
    "read_granularity": "1min"
  },
  "models": {
    "prophet": {
      "save": true,
      "filename": "prophet_model.pkl",
      "train_on_startup": true,
      "version": "v1"
    },
    "arima": {
      "save": true,
      "filename": "arima_model.pkl",
      "train_on_startup": false,
      "version": "v1"
    },
    "holt": {
      "save": true,
      "filename": "holt_model.pkl",
      "train_on_startup": false,
      "version": "v1"
    }
  }
}